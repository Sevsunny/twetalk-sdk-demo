<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".call.WxCallActivity">

    <!-- 顶部区域 - 联系人信息 -->
    <LinearLayout
        android:id="@+id/topArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 头像 -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_avatar_call"
            android:contentDescription="@string/contact_avatar"
            android:padding="24dp"
            android:src="@drawable/ic_person" />

        <!-- 昵称 -->
        <TextView
            android:id="@+id/tvNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="张三" />

        <!-- OpenID 信息按钮 -->
        <LinearLayout
            android:id="@+id/layoutOpenId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@string/contact_open_id"
                android:src="@drawable/ic_info"
                app:tint="#80FFFFFF" />

            <TextView
                android:id="@+id/tvOpenId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:ellipsize="middle"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                tools:text="oOMCN5CR14xUh7vBmxRQdSYjsLek" />

        </LinearLayout>

        <!-- 状态提示 -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textColor="#B0B0B0"
            android:textSize="16sp"
            tools:text="等待对方接听..." />

    </LinearLayout>

    <!-- 底部控制区域 -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 静音按钮 (通话中显示) -->
        <LinearLayout
            android:id="@+id/layoutMute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabMute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/mute"
                app:srcCompat="@drawable/ic_mic" />

            <TextView
                android:id="@+id/tvMuteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/mute"
                android:textColor="#B0B0B0"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 挂断按钮 -->
        <LinearLayout
            android:id="@+id/layoutHangup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabHangup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E53935"
                android:contentDescription="@string/hangup"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_call_end"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/hangup"
                android:textColor="#B0B0B0"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 接听按钮 (来电时显示) -->
        <LinearLayout
            android:id="@+id/layoutAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#4CAF50"
                android:contentDescription="@string/answer"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_call"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/answer"
                android:textColor="#B0B0B0"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
